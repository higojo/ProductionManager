<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="production-manager" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
    <class>br.com.stefanini.model.entity.Atividade</class>
    <class>br.com.stefanini.model.entity.Modulo</class>
    <class>br.com.stefanini.model.entity.OrdemServico</class>
    <class>br.com.stefanini.model.entity.Perfil</class>
    <class>br.com.stefanini.model.entity.Pessoa</class>
    <class>br.com.stefanini.model.entity.ProgressoAtividade</class>
    <class>br.com.stefanini.model.entity.Projeto</class>
    <class>br.com.stefanini.model.entity.Usuario</class>
    <class>br.com.stefanini.model.entity.Atuacao</class>
    <class>br.com.stefanini.model.entity.Pacote</class>
    <class>br.com.stefanini.model.entity.AtividadeArtefatos</class>
    <class>br.com.stefanini.model.entity.Parametro</class>
    <properties>
        <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
        <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/production_manager?useTimezone=true&amp;serverTimezone=America/Sao_Paulo&amp;useSSL=true "/>
        <property name="javax.persistence.jdbc.user" value="root"/>
        <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
        <property name="javax.persistence.jdbc.password" value="OC2016"/>
        <property name="hibernate.jdbc.batch_size" value="50"/>
        <property name="hibernate.c3p0.max_size" value="20"/>
        <property name="hibernate.c3p0.min_size" value="5"/>
        <property name="hibernate.c3p0.timeout" value="1800"/>
        <property name="hibernate.c3p0.max_statements" value="50"/>
        <property name="hibernate.hbm2ddl.auto" value="update"/>
        <property name="hibernate.show_sql" value="true"/>
    </properties>
  </persistence-unit>
</persistence>
